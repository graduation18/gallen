<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_home"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:background="@drawable/toolbar_color"
                style="@style/ToolBarStyle.Event"
                >
                <TextView
                    android:id="@+id/back"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/back"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up2"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    >
                    <TextView
                        android:id="@+id/notifications"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:drawableLeft="@drawable/notifications"
                        android:layout_marginRight="20dp"

                        />

                    <TextView
                        android:id="@+id/number_of_notifications"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/circle"
                        android:text="15"
                        android:textSize="6dp"
                        android:textAlignment="center"/>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        <Button
            android:id="@+id/speciality"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_edit_text1"
            android:textSize="15dp"
            android:hint="@string/speciality"
            />
        <Button
            android:id="@+id/doctor_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_edit_text1"
            android:textSize="15dp"
            android:hint="@string/doctor_name"
            />
        <EditText
            android:id="@+id/appointment_period"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_edit_text1"
            android:textSize="15dp"
            android:hint="@string/appointment_period"
            android:textAlignment="center"
            android:drawableLeft="@drawable/calendar"
            android:padding="5dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/times_of_work"
                android:textColor="@color/green_light"
                android:layout_margin="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/saturaday"
                    android:hint="@string/saturaday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/start_appointment_saturaday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/end_appointment_saturaday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/sunday"
                    android:hint="@string/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/start_appointment_sunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/end_appointment_sunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/monday"
                    android:hint="@string/monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/start_appointment_monday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/end_appointment_monday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/tuesday"
                    android:hint="@string/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/start_appointment_tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/end_appointment_tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/wednsday"
                    android:hint="@string/wednsday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/start_appointment_wednsday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/end_appointment_wednsday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/thursday"
                    android:hint="@string/thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/start_appointment_thursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/end_appointment_thursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/friday"
                    android:hint="@string/friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/start_appointment_friday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/end_appointment_friday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"></android.support.v7.widget.AppCompatSpinner>
                </TableRow>
            </LinearLayout>

            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/save"
                    android:text="@string/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_button_1"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/cancel"
                    android:text="@string/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_button_4"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            </TableRow>


        </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:visibility="invisible" />


    </RelativeLayout>

</FrameLayout>


