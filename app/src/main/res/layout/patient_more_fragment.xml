<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout"
    android:layoutDirection="ltr"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/more_layout"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_home"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/toolbar_color"
            style="@style/ToolBarStyle.Event"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:drawableLeft="@drawable/notifications"
                    android:layout_marginRight="20dp"

                    />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/circle"
                    android:text="15"
                    android:textSize="6dp"
                    android:textAlignment="center"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Settings"
            android:textSize="10dp"
            android:drawableLeft="@drawable/nav_settings"
            android:drawableRight="@drawable/nav_arrow"
            android:background="@drawable/round_button_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
        <Button
            android:id="@+id/approval_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/approval_list"
            android:drawableLeft="@drawable/nav_approvals_list"
            android:drawableRight="@drawable/nav_arrow"
            android:background="@drawable/round_button_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textSize="10dp"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:padding="10dp"
            android:drawablePadding="10dp"

            />
        <Button
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/contact_us"
            android:drawableLeft="@drawable/nav_contactus"
            android:drawableRight="@drawable/nav_arrow"
            android:background="@drawable/round_button_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"            android:textSize="10dp"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
        <Button
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/contact_us"
            android:drawableLeft="@drawable/nav_aboutgalen"
            android:drawableRight="@drawable/nav_arrow"
            android:background="@drawable/round_button_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textSize="10dp"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:padding="10dp"
            android:drawablePadding="10dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/round_button_8" >

            <Button
                android:id="@+id/sign_out"
                android:text="@string/sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableLeft="@drawable/nav_logout"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </FrameLayout>

    </LinearLayout>
</FrameLayout>
