<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout"
    android:layoutDirection="ltr"
    android:background="@color/dark"
    android:backgroundTintMode="multiply"

    >


    <LinearLayout
        android:id="@+id/more_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:backgroundTintMode="add"
        android:orientation="vertical"
        android:saveEnabled="false">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_home"
            style="@style/ToolBarStyle.Event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_color"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/more"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@drawable/notifications"

                    />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/circle"
                    android:text="15"
                    android:textAlignment="center"
                    android:textSize="6dp" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:background="@color/dark"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/nav_settings"
            android:drawableRight="@drawable/nav_arrow"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/Settings"
            android:textAlignment="textStart"
            android:textSize="10dp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/approval_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:background="@color/dark"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/nav_approvals_list"
            android:drawableRight="@drawable/nav_arrow"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/approval_list"
            android:textAlignment="textStart"
            android:textSize="10dp"
            tools:ignore="RtlCompat"

            />

        <Button
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:background="@color/dark"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/nav_contactus"
            android:drawableRight="@drawable/nav_arrow"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/contact_us"
            android:textAlignment="textStart"
            android:textSize="10dp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:background="@color/dark"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/nav_aboutgalen"
            android:drawableRight="@drawable/nav_arrow"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="@string/about_us"
            android:textAlignment="textStart"
            android:textSize="10dp"
            tools:ignore="RtlCompat" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@color/dark"
            android:backgroundTintMode="add"


            >

            <Button
                android:id="@+id/sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableLeft="@drawable/nav_logout"
                android:gravity="center"
                android:text="@string/sign_out"
                android:textColor="@android:color/white" />
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        >


        <Button
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_button_8"
            android:gravity="center"
            android:text="@string/sign_in"
            android:textColor="@android:color/white"
            android:layout_margin="50dp"/>


    </LinearLayout>


</FrameLayout>
