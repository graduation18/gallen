<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_home"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:minHeight="?attr/actionBarSize"
                    android:background="@drawable/toolbar_color"
                    style="@style/ToolBarStyle.Event"
                    >
                    <TextView
                        android:id="@+id/back"
                        android:padding="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/back"
                        android:clickable="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        >
                        <TextView
                            android:id="@+id/notifications"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:drawableLeft="@drawable/notifications"
                            android:layout_marginRight="20dp"

                            />

                        <TextView
                            android:id="@+id/number_of_notifications"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="9dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/circle"
                            android:text="15"
                            android:textSize="6dp"
                            android:textAlignment="center"/>
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>


                <Button
                    android:id="@+id/clinic_definition"
                    android:text="@string/hospital_clinic_definition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/hospital_clinic"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="clinic_definition"

                    />
                <Button
                    android:id="@+id/doctor_registration"
                    android:text="@string/doctor_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/doctor_registeration"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="doctor_registration"

                    />
                <Button
                    android:id="@+id/edit_delete_doctor"
                    android:text="@string/edit_delete_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/doctor_profile_edit"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="edit_delete_doctor"

                    />
                <Button
                    android:id="@+id/define_working_time"
                    android:text="@string/define_working_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/calendar_times"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="define_working_time"

                    />
                <Button
                    android:id="@+id/view_edit_working_time"
                    android:text="@string/view_edit_working_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/calendar_times"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="view_edit_working_time"
                    android:visibility="gone"

                    />
                <Button
                    android:id="@+id/block_patient"
                    android:text="@string/block_patinet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/user"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="block_patient"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/create_doctor_account"
                    android:text="@string/create_doctor_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/create_doctor"
                    android:drawableRight="@drawable/nav_arrow"
                    android:background="@drawable/round_button_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="create_doctor_account"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/sign_out"
                    android:text="@string/sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_button_1"
                    android:drawableLeft="@drawable/nav_logout"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:padding="20dp"
                    android:onClick="sign_out"
                    android:layout_marginTop="10dp"
                    />





            </LinearLayout>

        </FrameLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:visibility="invisible"/>


    </RelativeLayout>

</FrameLayout>

